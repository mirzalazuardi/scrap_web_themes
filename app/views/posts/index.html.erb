<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Excerpt</th>
      <%#<th>Content</th>%>
      <th>Image</th>
      <th>Date post</th>
      <%#<th>Download1</th>%>
      <%#<th>Download2</th>%>
      <%#<th>Tag</th>%>
      <th>Cat1</th>
      <%#<th>Cat2</th>%>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td> <%= link_to post.title , post.url %></td>
        <td><%= post.excerpt %></td>
        <!--<td><%# post.content %></td>-->
        <td> <%= image_tag post.image, :title => post.title, :class => "img-thumbnail" %> </td>
        <td><%= post.date_post.strftime("%d %b %Y") %></td>
        <!--<td><%# post.download1 %></td>-->
        <!--<td><%# post.download2 %></td>-->
        <!--<td><%# post.tag %></td>-->
        <td><%= post.cat1 %></td>
        <!--<td><%# post.cat2 %></td>-->
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @posts %>
<%= link_to 'New Post', new_post_path, class: 'btn btn-info' %>
